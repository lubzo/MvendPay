<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@android:color/background_light"
    tools:context="com.mvendpay.mvendpay.TransactionReceiptActivity">

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="15sp"
        android:text="Payment Complete"
        />
    <View android:id="@+id/separator"
        android:background="#000000"
        android:layout_below="@+id/tvLabel"
        android:layout_width = "match_parent"
        android:layout_height="0.5dip"
        android:layout_centerVertical ="true"
        />
    <TextView
        android:id="@+id/tvTransactionCompleteIDLabel"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="18sp"
        android:padding="2dp"
        android:ellipsize="start"
        android:gravity="center"
        android:text="Transaction ID"
        android:layout_below="@+id/separator"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tvTransactionCompleteID"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="13sp"
        android:padding="5dp"
        android:ellipsize="start"
        android:gravity="center"
        android:background="@drawable/edit_text_background"
        android:text="939394939393"
        android:layout_below="@+id/tvTransactionCompleteIDLabel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvTransactionCompleteAmountLabel"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="18sp"
        android:padding="2dp"
        android:ellipsize="start"
        android:gravity="center"
        android:text="Amount"
        android:layout_below="@+id/tvTransactionCompleteID"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tvTransactionCompleteAmount"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="13sp"
        android:padding="5dp"
        android:ellipsize="start"
        android:gravity="center"
        android:background="@drawable/edit_text_background"
        android:text="50000"
        android:layout_below="@+id/tvTransactionCompleteAmountLabel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvTransactionCompleteNarrativeLabel"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="18sp"
        android:padding="2dp"
        android:ellipsize="start"
        android:gravity="center"
        android:text="Narrative"
        android:layout_below="@+id/tvTransactionCompleteAmount"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tvTransactionCompleteNarrative"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:maxLines="4"
        android:lines="4"
        android:typeface="serif"
        android:textSize="13sp"
        android:padding="5dp"
        android:ellipsize="start"
        android:gravity="center"
        android:background="@drawable/edit_text_background"
        android:text="payment"
        android:inputType="textMultiLine"
        android:layout_below="@+id/tvTransactionCompleteNarrativeLabel"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tvTransactionCompletePaymentRefLabel"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="18sp"
        android:padding="2dp"
        android:ellipsize="start"
        android:gravity="center"
        android:text="Payment Ref"
        android:layout_below="@+id/tvTransactionCompleteNarrative"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tvTransactionCompletePaymentRef"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:maxLines="4"
        android:lines="4"
        android:typeface="serif"
        android:textSize="13sp"
        android:padding="5dp"
        android:ellipsize="start"
        android:gravity="center"
        android:background="@drawable/edit_text_background"
        android:text="74738833"
        android:inputType="textMultiLine"
        android:layout_below="@+id/tvTransactionCompletePaymentRefLabel"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tvTransactionCompleteReceiptLabel"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="18sp"
        android:padding="2dp"
        android:ellipsize="start"
        android:gravity="center"
        android:text="Receipt No"
        android:layout_below="@+id/tvTransactionCompletePaymentRef"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tvTransactionCompleteReceipt"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:typeface="serif"
        android:textSize="13sp"
        android:padding="5dp"
        android:ellipsize="start"
        android:gravity="center"
        android:background="@drawable/edit_text_background"
        android:text="74738833"
        android:inputType="textMultiLine"
        android:layout_below="@+id/tvTransactionCompleteReceiptLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tvTransactionCompleteReceipt"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnTransactionCompleteReceipt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:typeface="serif"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="2"
            android:background="@drawable/custom_bg"
            android:text="OK" />
    </LinearLayout>
</RelativeLayout>

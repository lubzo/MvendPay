<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@android:color/background_light"
    tools:context="com.mvendpay.mvendpay.RegisterUserDetailsActivity">

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:textSize="15sp"
        android:text="Payment Summary"
        />
    <View android:id="@+id/separator"
        android:background="#000000"
        android:layout_below="@+id/tvLabel"
        android:layout_width = "match_parent"
        android:layout_height="0.5dip"
        android:layout_centerVertical ="true"
        />
    <TextView
        android:id="@+id/tvTransactionIDLabel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="18sp"
        android:padding="2dp"
        android:ellipsize="start"
        android:gravity="center"
        android:text="Transaction ID"
        android:layout_below="@+id/separator"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tvTransactionID"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="13sp"
        android:padding="5dp"
        android:ellipsize="start"
        android:gravity="center"
        android:background="@drawable/edit_text_background"
        android:text="939394939393"
        android:layout_below="@+id/tvTransactionIDLabel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvTransactionAmountLabel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="18sp"
        android:padding="2dp"
        android:ellipsize="start"
        android:gravity="center"
        android:text="Amount"
        android:layout_below="@+id/tvTransactionID"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tvTransactionAmount"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="13sp"
        android:padding="5dp"
        android:ellipsize="start"
        android:gravity="center"
        android:background="@drawable/edit_text_background"
        android:text="50000"
        android:layout_below="@+id/tvTransactionAmountLabel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvTransactionNarrativeLabel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="18sp"
        android:padding="2dp"
        android:ellipsize="start"
        android:gravity="center"
        android:text="Narrative"
        android:layout_below="@+id/tvTransactionAmount"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tvTransactionNarrative"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:maxLines="4"
        android:lines="4"
        android:typeface="serif"
        android:textSize="13sp"
        android:padding="5dp"
        android:ellipsize="start"
        android:gravity="center"
        android:background="@drawable/edit_text_background"
        android:text="payment"
        android:inputType="textMultiLine"
        android:layout_below="@+id/tvTransactionNarrativeLabel"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tvTransactionNarrative"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnTransactionSummaryTapCard"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:enabled="false"
            android:textColor="@android:color/white"
            android:paddingBottom="8dp"
            android:textAllCaps="false"
            android:typeface="serif"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="2"
            android:background="@drawable/custom_bg"
            android:text="TAP CARD TO PAY" />
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/approveLayout"
    android:paddingRight="12dp"
    android:paddingLeft="12dp">
    <TextView
        android:id="@+id/txt_push_message"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="18sp"
        android:padding="2dp"
        android:ellipsize="start"
        android:gravity="center"
        android:text="Message"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/etApprovePin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="13sp"
        android:padding="5dp"
        android:ellipsize="start"
        android:gravity="center"
        android:background="@drawable/edit_text_background"
        android:inputType="numberPassword"
        android:hint="Enter Pin"
        android:layout_below="@+id/txt_push_message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/etApprovePin"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnApproveCancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingBottom="8dp"
            android:layout_weight="1.3"
            android:gravity="center_vertical|center_horizontal"
            android:textAllCaps="false"
            android:typeface="serif"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_bg_grey"
            android:text="Cancel" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:layout_weight="0.4"/>
        <Button
            android:id="@+id/btnApprove"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@android:color/white"
            android:paddingBottom="8dp"
            android:textAllCaps="false"
            android:typeface="serif"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="1.3"
            android:background="@drawable/custom_bg"
            android:text="Submit" />
    </LinearLayout>

</RelativeLayout>
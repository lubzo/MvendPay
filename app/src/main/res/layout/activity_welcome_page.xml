<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:background="@android:color/background_light"
    tools:context="com.mvendpay.mvendpay.WelcomePageActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="100dp"
        android:typeface="serif"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:text="Welcome to" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:typeface="serif"
        android:layout_marginTop="5dp"
        android:textSize="29sp"
        android:textStyle="bold"
        android:text="MvendPay" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:textSize="13sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:typeface="serif"
        android:text="Please enter your cellphone number" />

    <EditText
        android:id="@+id/etphoneNumber"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="13sp"
        android:padding="5dp"
        android:ellipsize="start"
        android:gravity="center"
        android:background="@drawable/edit_text_background"
        android:inputType="phone"
        android:hint="Cellphone number 0XXXXXXXXX"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etphoneNumber"
        android:textSize="13sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:typeface="serif"
        android:text="Please enter your password" />

    <EditText
        android:id="@+id/etRegPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="13sp"
        android:padding="5dp"
        android:ellipsize="start"
        android:gravity="center"
        android:background="@drawable/edit_text_background"
        android:inputType="textPassword"
        android:hint="XXXXXXXXX"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etRegPassword"
        android:textSize="13sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:typeface="serif"
        android:text="Please confirm your password" />

    <EditText
        android:id="@+id/etRegConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="13sp"
        android:padding="5dp"
        android:ellipsize="start"
        android:gravity="center"
        android:background="@drawable/edit_text_background"
        android:inputType="textPassword"
        android:hint="XXXXXXXXX"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/etRegConfirmPassword"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingBottom="8dp"
            android:layout_weight="1.3"
            android:typeface="serif"
            android:gravity="center_vertical|center_horizontal"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_bg_grey"
            android:text="Cancel" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:layout_weight="0.4"/>
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@android:color/white"
            android:paddingBottom="8dp"
            android:textAllCaps="false"
            android:typeface="serif"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="1.3"
            android:background="@drawable/custom_bg"
            android:text="Register" />
    </LinearLayout>


</RelativeLayout>

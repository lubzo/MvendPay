<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/tvHistory_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#444444"
        android:textSize="16sp"
        android:text="Bob Johnson" />

    <TextView
        android:id="@+id/history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="July 20th 2017"
        android:textColor="#9F9F9F"
        android:textSize="13sp"
        android:layout_below="@+id/tvHistory_id"
        android:layout_alignLeft="@+id/tvHistory_id"
        android:layout_alignStart="@+id/tvHistory_id"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/tvHistoryAmount"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:paddingRight="25dp"
        android:textColor="#379EFB"
        android:layout_marginRight="12dp"
        android:text="+0.3M" />
</RelativeLayout>

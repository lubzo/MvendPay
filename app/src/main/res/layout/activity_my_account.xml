<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:background="@android:color/background_light"
    tools:context="com.mvendpay.mvendpay.MyAccountActivity">
    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:textSize="15sp"
        android:text="My Account"
        />
    <View android:id="@+id/separator"
        android:background="#000000"
        android:layout_below="@+id/tvLabel"
        android:layout_width = "match_parent"
        android:layout_height="0.5dip"
        android:layout_centerVertical ="true"
        />
    <Button
        android:id="@+id/btnChangePin"
        android:layout_width="match_parent"
        android:layout_below="@id/separator"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAllCaps="false"
        android:typeface="serif"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_bg_grey"
        android:text="Change Pin" />
    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_below="@id/btnChangePin"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAllCaps="false"
        android:typeface="serif"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_bg_grey"
        android:text="Change Password" />

    <Button
        android:id="@+id/btnChangeEnableCard"
        android:layout_width="match_parent"
        android:layout_below="@id/btnChangePassword"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAllCaps="false"
        android:typeface="serif"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_bg_grey"
        android:text="Enable Card" />
</RelativeLayout>

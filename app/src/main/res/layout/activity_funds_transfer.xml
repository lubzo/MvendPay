<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:background="@android:color/background_light"
    tools:context="com.mvendpay.mvendpay.FundsTransferActivity">

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:textSize="15sp"
        android:text="Transfer Funds to the Number of Your Choice"
        />
    <View android:id="@+id/separator"
        android:background="#000000"
        android:layout_below="@+id/tvLabel"
        android:layout_width = "match_parent"
        android:layout_height="0.5dip"
        android:layout_centerVertical ="true"
        />

    <Spinner
        android:id="@+id/spn_linkedWallets"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height ="45dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="13sp"
        android:padding="5dp"
        android:layout_below="@+id/separator"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_text_background"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/etTransferAmount"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:ems="5"
        android:typeface="serif"
        android:textSize="13sp"
        android:padding="5dp"
        android:ellipsize="start"
        android:gravity="center"
        android:background="@drawable/edit_text_background"
        android:inputType="number"
        android:hint="Enter Amount"
        android:layout_below="@+id/spn_linkedWallets"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/etTransferAmount"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnFundsTransferCancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingBottom="8dp"
            android:layout_weight="1.3"
            android:gravity="center_vertical|center_horizontal"
            android:textAllCaps="false"
            android:typeface="serif"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_bg_grey"
            android:text="Cancel" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:layout_weight="0.4"/>
        <Button
            android:id="@+id/btnFundsTransfersSubmit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@android:color/white"
            android:paddingBottom="8dp"
            android:textAllCaps="false"
            android:typeface="serif"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="1.3"
            android:background="@drawable/custom_bg"
            android:text="Submit" />
    </LinearLayout>
</RelativeLayout>
